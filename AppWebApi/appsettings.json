{
    "Logging": {
        //All Logger providers
        "LogLevel": {
            // "Default": "Information",
            // "Microsoft": "Warning",
            // "Microsoft.Hosting.Lifetime": "Information"
            "Default": "Information",
            "Microsoft": "Information",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "Console": {
            //Valid only for the console
            "LogLevel": {
                // "Services": "Information",
                // "AppWebApi.Controllers": "None",
                // "DbRepos": "None"
                "Services": "Information",
                "AppWebApi.Controllers": "Information",
                "DbRepos": "Information"
            }
        },
        "InMemory": {
            //Valid only for the InMemory provider
            "LogLevel": {
                // "Services": "Information",
                // "AppWebApi.Controllers": "Information",
                // "DbRepos": "Information"
                "Services": "Information",
                "AppWebApi.Controllers": "Information",
                "DbRepos": "Information"
            }
        }
    },

    "AllowedHosts": "*",

    "ApplicationSecrets": {
        "SecretStorage": "UserSecrets"
    },

    "DatabaseConnections": {
        "DefaultDataUser": "root", //"gstusr" | "usr" | "supusr" | "dbo" | "root"
        "MigrationUser": "root", //migration is done by root user
        "UseDataSetWithTag": "sql-attractions.sqlserver.docker" //"sql-attractions.sqlserver.docker" | "sql-attractions.mysql.docker" | "sql-attractions.postgresql.docker"
    }
}









